generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EUserRole {
  USER
  ADMIN
  UNKNOWN
}

enum EUserStatus {
    ACTIVE 
    INACTIVE
    BANNED
}

model User {
    id    String @id @default(uuid()) @db.Uuid()
    email String @unique 
    username  String
    password String
    isOAuth     Boolean @default(false)
    status EUserStatus
    role  EUserRole @default(UNKNOWN)
    image  String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    profile Profile?
    Company Company[]
    Account Account[]
    Payment Payment[]
    Notification Notification[]
}

model Account {
     id                 String  @id @default(uuid()) @db.Uuid()
     userId             String  @db.Uuid()
     provider           String
     providerAccountId  String
     refreshToken       String?
     accessToken        String?
     accessTokenExpires DateTime?
     user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

     @@unique([provider, providerAccountId])
}


model Profile{
    id      String   @id @default(uuid()) @db.Uuid()
    userId  String   @unique @db.Uuid()
    user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    fullname String
    phone    String
    address  String
    nationalId String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

}


enum ELegalType {
  COMPANY_LTD
  CORPORATION
  PARTNERSHIP
  SOLE_PROPRIETORSHIP
  COOPERATIVE
  NON_GOVERNMENTAL_ORGANIZATION
}

model Company {
    id        String   @id @default(uuid()) @db.Uuid()
    name      String
    country   String
    address   String
    emailCompany String
    legalType ELegalType @default(COMPANY_LTD)
    phone     String
    TIN       String   @unique()
    operatorId  String   @db.Uuid()
    operator  User     @relation(fields: [operatorId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    applicationDoc Application[]

    RequiredDocument RequiredDocument[]
}

model Application {
    id        String   @id @default(uuid()) @db.Uuid()
    name      String
    description    String
    processingTime Int
    applicationFee Float
    validityMonths Int
    companyId String   @db.Uuid()
    company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    requiredDocuments RequiredDocument[]
    LicenseApplication ApplicationDocument[]

    Payment Payment?
}

enum EDocumentType {
  BUSINESS_PLAN
  RDB_CERTIFICATE
  COMPANY_CONTRACT
  OTHER_DOCUMENT
}

model RequiredDocument {
  id          String   @id @default(uuid()) @db.Uuid()
  name        String
  documentType EDocumentType  
  description String?
  file        Bytes
  companyId   String   @db.Uuid()
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  applications Application[]

  ApplicationDocument ApplicationDocument[]
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

model ApplicationDocument {
  id            String   @id @default(uuid()) @db.Uuid()
  applicationId String   @db.Uuid()
  applicationType   Application  @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  requiredDocumentId String @db.Uuid
  documentType  RequiredDocument @relation(fields: [requiredDocumentId], references: [id], onDelete: Cascade)
  status        ApplicationStatus @default(PENDING)
  extractedJson Json?
  reason        String?
  confidence    Float?
  rawOcrText   String? @db.Text()
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

}


enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}


model Payment {
  id              String   @id @default(uuid()) @db.Uuid()
  userId          String   @db.Uuid()
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  applicationId   String   @unique @db.Uuid()
  application     Application @relation(fields: [applicationId], references: [id])
  amount          Float
  currency        String
  paidAt          DateTime @default(now())
  status          PaymentStatus @default(PENDING)
  stripeIntentId  String?        @unique
  paidAtStripe    DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum ENotificationStatus {
  UNREAD
  READ
}

enum ENotificationType {
  APPLICATION_STATUS
  PAYMENT_STATUS
  SYSTEM
}

model Notification {
  id        String   @id @default(uuid()) @db.Uuid()
  userId    String   @db.Uuid()
  user      User     @relation(fields: [userId], references: [id])
  type      ENotificationType
  status    ENotificationStatus @default(UNREAD)
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum EAppSettingType {
  PASSWORD_RESET
  EMAIL_VERIFICATION
  ACCOUNT_VERIFICATION
  ACCOUNT_DELETION
  USER_DELETE
}

model AppSetting {
  id String @id @default(uuid()) @db.Uuid()
  type EAppSettingType
  value Int //expiry time in minutes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([createdAt])
}